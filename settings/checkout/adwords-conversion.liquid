{% comment %} Enter your account specific values below {% endcomment %}
{% assign google_converson_id = 123456789 %}
{% assign google_conversion_label = "abcdefghijklmnop" %}
<!-- Global site tag (gtag.js) - Google Ads: 1012711092 -->
<script async src="https://www.googletagmanager.com/gtag/js?id=AW-{{ google_converson_id }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'AW-{{ google_converson_id }}');
</script>

<!-- Event snippet for Web Order conversion page -->
<script>
    gtag('event', 'conversion', {
        'send_to': 'AW-{{ google_converson_id }}/{{ google_conversion_label }}',
        'value': {{ checkout.subtotal_price | money_without_currency | remove: ',' }},
        'currency': '{{ shop.currency }}',
        'transaction_id': '{{ order.order_number  }}'
    });
</script>
{% endif %}